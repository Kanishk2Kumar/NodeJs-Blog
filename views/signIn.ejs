<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign/Register Page</title>

</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="form-toggle">
                <button id="signInBtn">Sign In</button>
                <button id="registerBtn">Register</button>
            </div>
            <form id="signInForm" class="form">
                <h2>Sign In</h2>
                <input type="text" id="signInUsername" placeholder="Username" required>
                <input type="password" id="signInPassword" placeholder="Password" required>
                <button type="submit">Sign In</button>
            </form>
            <form id="registerForm" class="form hidden">
                <h2>Register</h2>
                <input type="text" id="registerUsername" placeholder="Username" required>
                <input type="password" id="registerPassword" placeholder="Password" required>
                <textarea id="aboutMe" placeholder="About Me"></textarea>
                <button type="submit">Register</button>
            </form>
        </div>
    </div>
    <script>
        document.getElementById('signInBtn').addEventListener('click', () => {
            document.getElementById('signInForm').classList.remove('hidden');
            document.getElementById('registerForm').classList.add('hidden');
        });

        document.getElementById('registerBtn').addEventListener('click', () => {
            document.getElementById('signInForm').classList.add('hidden');
            document.getElementById('registerForm').classList.remove('hidden');
        });

        document.getElementById('signInForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const username = document.getElementById('signInUsername').value;
            const password = document.getElementById('signInPassword').value;
            // Handle sign in logic here
            console.log('Sign In:', { username, password });
            // Redirect to home page
            window.location.href = 'home.html';
        });

        document.getElementById('registerForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const username = document.getElementById('registerUsername').value;
            const password = document.getElementById('registerPassword').value;
            const aboutMe = document.getElementById('aboutMe').value;
            // Handle registration logic here
            console.log('Register:', { username, password, aboutMe });
            // Optionally, redirect to another page after registration
        });
    </script>
</body>
</html>
